{{ 'section-text-content.css' | asset_url | stylesheet_tag }}

{% assign title = section.settings.title %}
{% assign description = section.settings.description %}
{% assign sub_text = section.settings.sub_text %}

<section class="text-content">
  {% if sub_text != blank %}
    <p class="text-content__sub">{{ sub_text }}</p>
  {% endif %}

  {% if title != blank %}
    <h1 class="text-content__title">{{ title }}</h1>
  {% endif %}

  {% if description != blank %}
    <p class="text-content__description">{{ description }}</p>
  {% endif %}

  {% for mod_block in section.blocks %}
    {% assign button_url = mod_block.settings.button_url %}
    {% assign button_text = mod_block.settings.button_text %}

    {% if button_url != blank and button_text != blank %}
      <a href="{{ button_url }}" class="text-content__button">
        {{ button_text }}
      </a>
    {% endif %}
  {% endfor %}
</section>

{% schema %}
{
  "name": "Text Content",
  "settings": [
    {
      "type": "text",
      "id": "sub_text",
      "label": "Sub Text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "name": "Button",
      "type": "button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Button"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text Content"
    }
  ]
}
{% endschema %}
